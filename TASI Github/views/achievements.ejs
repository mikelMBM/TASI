					<% achievements.StreckeMeter.forEach(function(entry){ %>
						<% if(entry.hasOwnProperty('Wert')){ %>
							var WertObj = {valX: i, valY: <%= entry.Wert %>, Datum: "<%= entry.Datum.toISOString().split("T")[0]; %>"};
							data.push(WertObj);
							i++;
						<% } %>
