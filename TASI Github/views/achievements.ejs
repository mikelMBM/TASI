					  <optgroup label="√úbungen">
							<% if(uebungen){ %>
								<% if(uebungen.hasOwnProperty('UebungsIDs')){ %>
									<% for(i=0; i<uebungen.UebungsIDs.length; i++){ %>
										<option value='<%= uebungen.UebungsIDs[i] %>'><%= uebungen.UebungsBezeichnungen[i] %></option> 					
