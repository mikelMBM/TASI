								<input type="hidden" name="achievementChange" value= <%= entry.ID %>>
								<input class="btn btn-primary" type="submit" value="ok"></br></br>
							</form>
						<% } %>
					<% }) %></br>
				<% } %>
				
				<% if(achievements.hasOwnProperty('DauerMin')){ %>
					Dauer in Minuten:
					<% achievements.DauerMin.forEach(function(entry){ %>
						<% if(entry.hasOwnProperty('Wert')){ %>
